<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Top Banner Image -->
        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cit" />
        <!-- Put school bus image -->

        <!-- Big Title -->
        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserve Your School Ride!"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#734E4E"
            android:gravity="center"
            android:layout_marginTop="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btndashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textColor="#FFFFFF"
                android:backgroundTint="#d86f8f"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnViewVehicles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Vehicles"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D4A5A5" />
        </LinearLayout>

        <!-- Our Services Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Services"
            android:textColor="#734E4E"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            android:gravity="center" />

        <!-- Services Section (Stacked vertically) -->
        <!-- Services Section (Stacked vertically, Title then Image) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:padding="8dp">

            <!-- Field Trips Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Field Trips"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#734E4E"
                    android:layout_marginBottom="12dp"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:src="@drawable/civil"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <!-- Campus Shuttle Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campus Shuttle"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#734E4E"
                    android:layout_marginBottom="12dp"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:src="@drawable/citbus"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <!-- Educational Tours Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="16dp"
                android:elevation="6dp"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Educational Tours"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#734E4E"
                    android:layout_marginBottom="12dp"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:src="@drawable/civil2"
                    android:scaleType="centerInside" />
            </LinearLayout>

        </LinearLayout>



        <!-- Benefits Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why Choose Us?"
            android:textColor="#734E4E"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“š Fast Booking"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰ Rewards and Bonuses"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§­ GPS Tracking"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Hotline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need Help? Call us: +639*******"
            android:textColor="#d86f8f"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
