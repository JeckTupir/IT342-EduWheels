<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD3D3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Info"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4B1F1F"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etPickup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Pick-up Location"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etDropoff"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Drop-off Location"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etBookingDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Pick-up DateTime (yyyy-MM-ddTHH:mm:ss)"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etReturnDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Drop-off DateTime (yyyy-MM-ddTHH:mm:ss)"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etPassengerCount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Number of Passengers"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvVehicleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested Vehicles"
            android:textColor="#4B1F1F"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- Carousel of filtered vehicles -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vehicleCarousel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:layout_marginTop="20dp"
            android:backgroundTint="#D59DAA"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tvResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4B1F1F"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
