<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#734E4E"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/headerLogo"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:src="@drawable/edufour" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:padding="16dp">

            <!-- Header -->


            <!-- Banner Image -->
            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/eduone" />

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserve Your School Ride with EduWheels"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#734E4E"
                android:gravity="center"
                android:layout_marginTop="24dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast, easy, and reliable vehicle booking\nfor school events and activities."
                android:textSize="16sp"
                android:textColor="#555555"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp" />

            <!-- Book Button -->
            <Button
                android:id="@+id/btnBookNow"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#d86f8f"
                android:text="Book Now"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

            <!-- Services Section -->
            <TextView
                android:id="@+id/servicesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Trip Services:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#734E4E"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/servicesList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Field Trips\n• Educational Tours\n• Sports Events\n• Club Activities\n• Campus Shuttle Services"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="100dp" /> <!-- Add extra margin so last item doesn't hide behind footer -->

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Footer at the Bottom -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#734E4E"
        android:padding="8dp"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 EduWheels"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
